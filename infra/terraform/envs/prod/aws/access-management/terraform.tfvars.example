# ==============================================================================
# Production Environment - Access Management Configuration
# ==============================================================================

region         = "us-east-1"
aws_account_id = "123456789012"  # Replace with your AWS account ID
environment    = "prod"
project        = "hera"

# ==============================================================================
# Security Settings (STRICTER for Production)
# ==============================================================================

enforce_password_policy = true
enforce_mfa            = true
allowed_ip_ranges      = []  # STRONGLY RECOMMENDED: Add IP restrictions for production
verify_cloudtrail      = true

# ==============================================================================
# User Assignments (Minimal Access for Production)
# ==============================================================================

users = {
  # Example: Infra Manager (only senior team members)
  "john.doe" = {
    email               = "john.doe@company.com"
    full_name           = "John Doe"
    roles               = ["infra-manager"]
    require_mfa         = true
    console_access      = true
    programmatic_access = true
    environments        = ["dev", "staging", "prod"]
  }

  # Example: Security Engineer (full security access)
  "bob.security" = {
    email               = "bob.security@company.com"
    full_name           = "Bob Security"
    roles               = ["security-engineer"]
    require_mfa         = true
    console_access      = true
    programmatic_access = true
    environments        = ["dev", "staging", "prod"]
  }
}

# ==============================================================================
# Tags
# ==============================================================================

tags = {
  Project     = "hera"
  Environment = "prod"
  ManagedBy   = "Terraform"
  Module      = "access-management"
  Criticality = "high"
}
